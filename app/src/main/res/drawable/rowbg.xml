<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">

            <corners
                android:radius="6dp" />
            <padding
                android:bottom="3dp"
                android:top="3dp" />

            <gradient
                android:startColor="#9E1E5E"
                android:endColor="#9A9AE4"
                android:angle="45"
                />

            <stroke
                android:width="2dp"
                android:color="#ffffff" />
        </shape>

    </item>

</selector>