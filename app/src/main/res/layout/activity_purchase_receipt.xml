<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" tools:context="com.cs442.team13.UpdateBookInfoActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="464dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank you for your Purchase"
                android:textSize="10pt"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="395dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:id="@+id/purchaseVendor"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:id="@+id/purchaseInfo"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/continueButton"
        android:layout_gravity="center_horizontal"
        android:onClick="continueShopping"
        android:nestedScrollingEnabled="true" />
</LinearLayout>
