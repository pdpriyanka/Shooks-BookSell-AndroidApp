<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs442.team13.RegisterActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/activity_horizontal_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_weight="0.40"
                android:gravity="start"
                android:layout_marginEnd="2pt"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:layout_weight="0.60"
                android:textColor="@color/wheat"
                android:textSize="17dp"
                android:gravity="start"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_weight="0.40"
                android:gravity="start"
                android:layout_marginEnd="2pt"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:layout_weight="0.60"
                android:textColor="@color/wheat"
                android:textSize="17dp"
                android:gravity="start"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_weight="0.40"
                android:gravity="start"
                android:layout_marginEnd="2pt"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:layout_weight="0.60"
                android:textColor="@color/wheat"
                android:textSize="17dp"
                android:gravity="start"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/passsword"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_weight="0.40"
                android:gravity="start"
                android:layout_marginEnd="2pt"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_weight="0.60"
                android:textColor="@color/wheat"
                android:textSize="17dp"
                android:gravity="start"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Type Again"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_weight="0.40"
                android:gravity="start"
                android:layout_marginEnd="2pt"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/confPass"
                android:inputType="textPassword"
                android:layout_weight="0.60"
                android:textColor="@color/wheat"
                android:textSize="17dp"
                android:gravity="start"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_weight="0.60"
                android:gravity="start"
                android:layout_marginEnd="2pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/photo"
                android:src="@drawable/personhead"
                android:layout_weight="0.40"

                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/takephoto"
                android:background="@drawable/camera2"
                android:layout_weight="0.10"
                />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="vertical">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Register"
            android:onClick="register"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/post_book_activity_horizontal_margin"
            android:background="@drawable/button_gradient"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />


        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:onClick="showLogin"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Already have an account? Log in! "
            android:background="@drawable/button_gradient"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>